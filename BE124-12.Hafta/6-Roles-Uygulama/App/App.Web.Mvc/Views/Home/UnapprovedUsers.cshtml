@model List<UserViewModel>

<h2>Unapproved Users</h2>

@if (Model.Count == 0)
{
    <div class="alert alert-info">All users approved</div>
}
else
{
    <ul>
        @foreach (var user in Model)
        {
            <li>@user.Name - @user.Email  <a asp-controller="Home" asp-action="ApproveUser" asp-route-id="@user.Id" class="btn btn-primary ms-3" >Approve</a> </li>
        }
    </ul>
}
