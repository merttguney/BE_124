@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model List<string>

<h1>Ürünler</h1>

<ul>
    @for (int i = 0; i < Model.Count; i++)
    {
        <li>
            @Model[i] - <span><a class="btn btn-success" asp-area="Customer" asp-controller="Shop" asp-action="Buy" asp-route-id="@i">Satın Al</a></span>
        </li>
    }
</ul>

