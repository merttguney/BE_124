<div class="container">
    <h1>Scoreboard</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Nickname</th>
                <th>Score</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                var score = Model[i];
                <tr>
                    <td>@(i + 1)</td>
                    <td>@score.Nickname</td>
                    <td>@score.Score</td>
                </tr>               
            }
        </tbody>
    </table>
</div>