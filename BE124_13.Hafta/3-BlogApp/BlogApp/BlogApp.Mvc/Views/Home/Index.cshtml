<div class="container">
    <h1>Blogs</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Title</th>
                <th>Size</th>
                <th>Created At</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                var blog = Model[i];
                <tr>
                    <td>@(i + 1)</td>
                    <td>@blog.Title</td>
                    <td>@blog.Size</td>
                    <td>@blog.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>
                        <a asp-controller="Home" asp-action="Detail" asp-route-id="@blog.Id" class="btn btn-primary">Detail</a>
                    </td>
                </tr>               
            }
        </tbody>
    </table>
</div>